/* pages/address/address.wxss */
.ord{
  background: #BEE7E9;
  margin: 20rpx 20rpx;
  padding: 10rpx 10rpx;
  border-radius: 20rpx;
}
.ordtext{
  font-weight: 500;
}
.add{
  width:100%;  
  background-color:#fff;
  position: absolute;
  bottom: 0;
  padding:15rpx 15rpx 30rpx 40rpx;
  border-top:1rpx solid #e0e0e0;
}
.add image{
  width:50rpx;
  margin-top:20rpx;
  margin-right:20rpx;
}
.add .right{
  width:35rpx;
  float:right;
  margin-right:60rpx;
  padding-top:15rpx;
  color:#e0e0e0;
}
.text{
  float:left;
  margin-top:20rpx;
}
.left{
  float:left;
}