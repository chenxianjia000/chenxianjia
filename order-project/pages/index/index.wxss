/**index.wxss**/
.swiper-image{
  width: 100%;
}
.container{
  position:absolute;
  width:100%;
  height:100%;
  background:#eee;
}
.aside{
  float:left;
  width:100px;
  padding-bottom:0;
  text-align:center;
  overflow: hidden;
  background:#fff;
}
.aside .menu{
  height:60px;
  color:#333;
  font-size:16px;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee; 
}
.aside .menu.active{
  background:#eee;
}
.item-content{
  float:left;
  width:calc(100% - 100px);
  height:100%;
}
.item-content .box{
  height:calc(100% - 10px);
  padding:10px 0 0 10px;
  overflow: scroll;
}
.item-content .box.active{
  padding-bottom:80px;
}
.item-content .box::-webkit-scrollbar{
  width:0;
}
.item-content .box .item{
  height:80px;
  padding:10px 0 10px 10px;
  margin-bottom:10px;
  background:#fff;
}
.item-content .box .item image{
  display:block;
  float:left;
  height:80px;
  width:90px;
  margin-right:10px;
}
.item-content .box .item text{
  display:block;
}
.item-content .box .item .title{
  margin-bottom:5px;
  font-size: 18px;
  font-weight:bolder;
}
.item-content .box .item .price{
  color:red;
  font-size:15px;
  margin-bottom:5px;
}
.item-content .box .item .btn{
  display:block;
  float:right;
  margin:-10px 10px 0 0;
  padding:5px 10px;
  font-size:14px;
  color:#fff;
  background:#A0EEE1;
  border-radius:20px;
}
.item-content .box .item .btn.active{
  background:#ccc;
}
.bottom-bar{
    display:flex;
    position: fixed;
    bottom:0;
    width:100%;
    height:80px;
    line-height:80px;
    background:#fff;
    box-shadow: 0 -5px 10px #ccc;
}
.bottom-bar.hidden{
  display:none;
}
.bottom-bar>view{
    flex-grow: 1;
}
.bottom-bar .count{
    padding-left:10px;
}
.bottom-bar .num{
    margin-right:10px;
    font-size:14px;
    font-weight:bolder;
    color:red;
}
.bottom-bar .btn{
    height:40px;
    width:50px;
    margin:20px 10px 0 0;
    color:#fff;
    line-height:40px;
    text-align:center;
    font-size:16px;
    background:#BEE7E9;
}
.middle{
  height: 50px;
  background-color: #BEE7E9;
}
.middle .goods{
  display: inline-block;
  font-size: 16px;
  font-weight: 600;
  margin: 14px 30px;
  padding-bottom: 2px;
  border-bottom: solid 3px #1296DB;
}
.middle .sear{
  display: inline-block;
  background: #eee;
  width: 80px;
  float: right;
  margin: 14px 10px;
  border-radius: 10px;
  padding-left: 3px;
  text-indent: 10px;
}
.middle .sear:hover{
  width: 160px;
}
